<UserControl x:Class="NexusNetChat.Client.Controls.MessageItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <UserControl.Resources>
        <!-- Discord Color Palette -->
        <SolidColorBrush x:Key="BackgroundPrimary" Color="#36393F"/>
        <SolidColorBrush x:Key="TextNormal" Color="#DCDDDE"/>
        <SolidColorBrush x:Key="TextMuted" Color="#72767D"/>
        <SolidColorBrush x:Key="InteractiveActive" Color="#FFFFFF"/>
        
        <!-- Message Style -->
        <Style x:Key="MessageStyle" TargetType="Border">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="16,2"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#32353B"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    
    <Border Style="{StaticResource MessageStyle}">
        <Grid Margin="0,4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Avatar -->
            <Ellipse Grid.Column="0" Width="40" Height="40" 
                     Fill="{Binding AvatarColor, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                     Margin="0,0,16,0"/>
            
            <!-- Message Content -->
            <StackPanel Grid.Column="1">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                    <TextBlock Text="{Binding Username, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                               Foreground="{Binding UsernameColor, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                               FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding Timestamp, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                               Foreground="{StaticResource TextMuted}" 
                               FontSize="12" Margin="8,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
                <TextBlock Text="{Binding MessageText, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                           Foreground="{StaticResource TextNormal}" TextWrapping="Wrap"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>

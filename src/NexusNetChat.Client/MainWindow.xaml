<Window x:Class="NexusNetChat.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NexusNetChat.Client"
        mc:Ignorable="d"
        Title="Nexus Chat" Height="800" Width="1200" MinWidth="940" MinHeight="600"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Discord Color Palette -->
        <SolidColorBrush x:Key="BackgroundPrimary" Color="#36393F"/>
        <SolidColorBrush x:Key="BackgroundSecondary" Color="#2F3136"/>
        <SolidColorBrush x:Key="BackgroundTertiary" Color="#202225"/>
        <SolidColorBrush x:Key="BackgroundAccent" Color="#4F545C"/>
        <SolidColorBrush x:Key="BackgroundFloating" Color="#18191C"/>

        <SolidColorBrush x:Key="InteractiveNormal" Color="#B9BBBE"/>
        <SolidColorBrush x:Key="InteractiveHover" Color="#DCDDDE"/>
        <SolidColorBrush x:Key="InteractiveActive" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="InteractiveMuted" Color="#4F545C"/>

        <SolidColorBrush x:Key="TextNormal" Color="#DCDDDE"/>
        <SolidColorBrush x:Key="TextMuted" Color="#72767D"/>
        <SolidColorBrush x:Key="TextLink" Color="#5865F2"/>
        <SolidColorBrush x:Key="HeaderPrimary" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="HeaderSecondary" Color="#B9BBBE"/>

        <SolidColorBrush x:Key="BrandExperiment" Color="#5865F2"/>
        <SolidColorBrush x:Key="BrandExperimentHover" Color="#4752C4"/>

        <!-- Server Icon Style -->
        <Style x:Key="ServerIconStyle" TargetType="Border">
            <Setter Property="Width" Value="48"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Background" Value="{StaticResource BackgroundAccent}"/>
            <Setter Property="CornerRadius" Value="24"/>
            <Setter Property="Margin" Value="0,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource BrandExperiment}"/>
                    <Setter Property="CornerRadius" Value="16"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Channel Item Style -->
        <Style x:Key="ChannelItemStyle" TargetType="Border">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Margin" Value="8,1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3A3C41"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Message Style -->
        <Style x:Key="MessageStyle" TargetType="Border">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="16,2"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#32353B"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Icon Button Style -->
        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{StaticResource InteractiveNormal}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="8"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="{StaticResource InteractiveHover}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Custom ScrollBar Style -->
        <Style x:Key="CustomScrollBarStyle" TargetType="ScrollBar">
            <Setter Property="Width" Value="14"/>
            <Setter Property="Background" Value="Transparent"/>
        </Style>
    </Window.Resources>

    <Border Background="{StaticResource BackgroundPrimary}" CornerRadius="8">
        <Grid>
            <!-- Window Chrome/Title Bar -->
            <Border Height="32" VerticalAlignment="Top" Background="{StaticResource BackgroundSecondary}" 
                    CornerRadius="8,8,0,0" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <Grid>
                    <TextBlock Text="Nexus Chat" Foreground="{StaticResource HeaderPrimary}" 
                               VerticalAlignment="Center" Margin="16,0" FontWeight="SemiBold"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="8,0">
                        <Button Content="−" Style="{StaticResource IconButtonStyle}" Click="Minimize_Click" Width="32" Height="32"/>
                        <Button Content="□" Style="{StaticResource IconButtonStyle}" Click="Maximize_Click" Width="32" Height="32"/>
                        <Button Content="×" Style="{StaticResource IconButtonStyle}" Click="Close_Click" Width="32" Height="32"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content -->
            <Grid Margin="0,32,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="72"/>
                    <ColumnDefinition Width="240"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Server List (Left Panel) -->
                <Border Grid.Column="0" Background="{StaticResource BackgroundTertiary}">
                    <ScrollViewer VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Disabled">
                        <StackPanel Margin="12,8">
                            <!-- Home Server -->
                            <Border Style="{StaticResource ServerIconStyle}" Background="{StaticResource BrandExperiment}">
                                <TextBlock Text="N" FontSize="24" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>

                            <!-- Separator -->
                            <Rectangle Height="2" Fill="{StaticResource BackgroundAccent}" Margin="16,8" RadiusX="1" RadiusY="1"/>

                            <!-- Server Icons -->
                            <Border Style="{StaticResource ServerIconStyle}">
                                <TextBlock Text="GS" FontSize="16" FontWeight="Bold" Foreground="{StaticResource HeaderPrimary}" 
                                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>

                            <Border Style="{StaticResource ServerIconStyle}">
                                <TextBlock Text="DS" FontSize="16" FontWeight="Bold" Foreground="{StaticResource HeaderPrimary}" 
                                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>

                            <Border Style="{StaticResource ServerIconStyle}">
                                <TextBlock Text="CS" FontSize="16" FontWeight="Bold" Foreground="{StaticResource HeaderPrimary}" 
                                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>

                            <!-- Add Server Button -->
                            <Border Style="{StaticResource ServerIconStyle}" Background="#43B581">
                                <TextBlock Text="+" FontSize="24" FontWeight="Bold" Foreground="{StaticResource HeaderPrimary}" 
                                          HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Border>

                <!-- Channel List (Middle Panel) -->
                <Border Grid.Column="1" Background="{StaticResource BackgroundSecondary}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="48"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Server Header -->
                        <Border Grid.Row="0" Background="{StaticResource BackgroundSecondary}" 
                                BorderBrush="{StaticResource BackgroundTertiary}" BorderThickness="0,0,0,1"
                                Padding="16,0">
                            <Grid>
                                <TextBlock Text="Gaming Server" Foreground="{StaticResource HeaderPrimary}" 
                                          FontWeight="SemiBold" VerticalAlignment="Center"/>
                                <TextBlock Text="⌄" Foreground="{StaticResource HeaderPrimary}" 
                                          HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="12"/>
                            </Grid>
                        </Border>

                        <!-- Channels -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                            <StackPanel Margin="0,20,0,8">
                                <!-- Text Channels Category -->
                                <TextBlock Text="TEXT CHANNELS" Foreground="{StaticResource TextMuted}" 
                                          FontSize="12" FontWeight="SemiBold" Margin="18,16,8,8"/>

                                <!-- General Channel (Active) -->
                                <Border Style="{StaticResource ChannelItemStyle}" Background="#42454A">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="#" Foreground="{StaticResource TextMuted}" FontSize="20" VerticalAlignment="Center"/>
                                        <TextBlock Text="general" Foreground="{StaticResource InteractiveActive}" 
                                                  Margin="8,0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>

                                <Border Style="{StaticResource ChannelItemStyle}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="#" Foreground="{StaticResource TextMuted}" FontSize="20" VerticalAlignment="Center"/>
                                        <TextBlock Text="random" Foreground="{StaticResource InteractiveNormal}" 
                                                  Margin="8,0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>

                                <Border Style="{StaticResource ChannelItemStyle}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="#" Foreground="{StaticResource TextMuted}" FontSize="20" VerticalAlignment="Center"/>
                                        <TextBlock Text="gaming" Foreground="{StaticResource InteractiveNormal}" 
                                                  Margin="8,0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>

                                <!-- Voice Channels Category -->
                                <TextBlock Text="VOICE CHANNELS" Foreground="{StaticResource TextMuted}" 
                                          FontSize="12" FontWeight="SemiBold" Margin="18,24,8,8"/>

                                <Border Style="{StaticResource ChannelItemStyle}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="♪" Foreground="{StaticResource TextMuted}" FontSize="16" VerticalAlignment="Center"/>
                                        <TextBlock Text="General" Foreground="{StaticResource InteractiveNormal}" 
                                                  Margin="8,0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>

                                <Border Style="{StaticResource ChannelItemStyle}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="♪" Foreground="{StaticResource TextMuted}" FontSize="16" VerticalAlignment="Center"/>
                                        <TextBlock Text="Gaming" Foreground="{StaticResource InteractiveNormal}" 
                                                  Margin="8,0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Border>

                <!-- Chat Area (Right Panel) -->
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="52"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="68"/>
                    </Grid.RowDefinitions>

                    <!-- Chat Header -->
                    <Border Grid.Row="0" Background="{StaticResource BackgroundPrimary}" 
                            BorderBrush="{StaticResource BackgroundTertiary}" BorderThickness="0,0,0,1"
                            Padding="16,0">
                        <Grid>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="#" Foreground="{StaticResource TextMuted}" FontSize="24" VerticalAlignment="Center"/>
                                <TextBlock Text="general" Foreground="{StaticResource HeaderPrimary}" 
                                          FontWeight="SemiBold" Margin="8,0" VerticalAlignment="Center"/>
                                <Rectangle Width="1" Height="24" Fill="{StaticResource BackgroundAccent}" Margin="16,0"/>
                                <TextBlock Text="Welcome to the general chat!" Foreground="{StaticResource TextMuted}" 
                                          VerticalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <Button Content="PIN" Style="{StaticResource IconButtonStyle}" ToolTip="Pinned Messages"/>
                                <Button Content="USR" Style="{StaticResource IconButtonStyle}" ToolTip="Member List"/>
                                <Button Content="🔍" Style="{StaticResource IconButtonStyle}" ToolTip="Search"/>
                                <Button Content="📥" Style="{StaticResource IconButtonStyle}" ToolTip="Inbox"/>
                                <Button Content="?" Style="{StaticResource IconButtonStyle}" ToolTip="Help"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Messages Area -->
                    <ScrollViewer Grid.Row="1" Background="{StaticResource BackgroundPrimary}" 
                                  VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled"
                                  x:Name="MessagesScrollViewer">
                        <StackPanel Margin="0,16">
                            <!-- Sample Messages -->
                            <Border Style="{StaticResource MessageStyle}">
                                <Grid Margin="0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Avatar -->
                                    <Ellipse Grid.Column="0" Width="40" Height="40" Fill="#7289DA" Margin="0,0,16,0"/>

                                    <!-- Message Content -->
                                    <StackPanel Grid.Column="1">
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                            <TextBlock Text="User123" Foreground="{StaticResource InteractiveActive}" 
                                                      FontWeight="SemiBold"/>
                                            <TextBlock Text="Today at 2:30 PM" Foreground="{StaticResource TextMuted}" 
                                                      FontSize="12" Margin="8,0,0,0" VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <TextBlock Text="Hello everyone! Welcome to our Discord-style chat app!" 
                                                  Foreground="{StaticResource TextNormal}" TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <Border Style="{StaticResource MessageStyle}">
                                <Grid Margin="0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Ellipse Grid.Column="0" Width="40" Height="40" Fill="#43B581" Margin="0,0,16,0"/>

                                    <StackPanel Grid.Column="1">
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                            <TextBlock Text="Developer" Foreground="#43B581" FontWeight="SemiBold"/>
                                            <TextBlock Text="Today at 2:31 PM" Foreground="{StaticResource TextMuted}" 
                                                      FontSize="12" Margin="8,0,0,0" VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <TextBlock Text="Thanks! This is a WPF implementation with Discord's design language." 
                                                  Foreground="{StaticResource TextNormal}" TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <Border Style="{StaticResource MessageStyle}">
                                <Grid Margin="0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Ellipse Grid.Column="0" Width="40" Height="40" Fill="#F04747" Margin="0,0,16,0"/>

                                    <StackPanel Grid.Column="1">
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                            <TextBlock Text="Gamer" Foreground="{StaticResource InteractiveActive}" FontWeight="SemiBold"/>
                                            <TextBlock Text="Today at 2:32 PM" Foreground="{StaticResource TextMuted}" 
                                                      FontSize="12" Margin="8,0,0,0" VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <TextBlock Text="Wow, this looks exactly like Discord! Great job on the UI design. 🎉" 
                                                  Foreground="{StaticResource TextNormal}" TextWrapping="Wrap"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Message Input Area -->
                    <Border Grid.Row="2" Background="{StaticResource BackgroundPrimary}" Padding="16">
                        <Border Background="{StaticResource BackgroundAccent}" CornerRadius="8" 
                                BorderBrush="{StaticResource BackgroundTertiary}" BorderThickness="1">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Upload Button -->
                                <Button Grid.Column="0" Content="+" Style="{StaticResource IconButtonStyle}" 
                                        Margin="8,0" ToolTip="Upload a file"/>

                                <!-- Text Input -->
                                <TextBox Background="Transparent" BorderThickness="0" 
                                        Foreground="{StaticResource TextNormal}" FontSize="16" 
                                        x:Name="MessageInput" Grid.ColumnSpan="2" Margin="39,-6,2,-6">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="TextBox">
                                                        <Grid>
                                                            <ScrollViewer x:Name="PART_ContentHost" 
                                                                         Padding="8,11"
                                                                         VerticalAlignment="Center"
                                                                         HorizontalAlignment="Stretch"/>
                                                            <TextBlock Text="Gửi tin nhắn đến general" 
                                                                      Foreground="{StaticResource TextMuted}"
                                                                      Margin="8,11"
                                                                      VerticalAlignment="Center"
                                                                      IsHitTestVisible="False">
                                                                <TextBlock.Style>
                                                                    <Style TargetType="TextBlock">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource TemplatedParent}}" Value="">
                                                                                <Setter Property="Visibility" Value="Visible"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </TextBlock.Style>
                                                            </TextBlock>
                                                        </Grid>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>

                                <!-- Emoji and Send Buttons -->
                                <StackPanel Grid.Column="2" Orientation="Horizontal">
                                    <Button Content=":)" Style="{StaticResource IconButtonStyle}" 
                                            Margin="0,0,8,0" ToolTip="Emoji and GIF"/>
                                    <Button Content="►" Style="{StaticResource IconButtonStyle}" 
                                            Background="{StaticResource BrandExperiment}"
                                            Margin="0,0,8,0" ToolTip="Send Message"
                                            x:Name="SendButton" Click="SendButton_Click"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Border>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
